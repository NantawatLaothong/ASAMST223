<%- layout('layouts/boilerplate')  %> 
<div class="container mt-5">
    <div class="row">
        <div class="col-10 offset-1 introduction my-5">
            <p class="display-4">New Project</p>
            <form method="POST" action="/projects" enctype="multipart/form-data">
                <div class="form-group mb-3">
                    <label for="projectTitle">Title</label>
                    <input type="text" name="title" class="form-control" id="projectTitleInput" placeholder="Project Name">
                  </div>
                  <div class="form-group mb-3">
                    <label for="projectAuthor">Author/Authors</label>
                    <input type="text" name="author" class="form-control" id="projectAuthorInput" placeholder="Author Names">
                  </div>
                  <div class="form-group mb-3">
                    <label for="projectEditCode">EditCode</label>
                    <input type="text" name="editCode" class="form-control" id="editCodeInput"  placeholder="Edit code">
                  </div>
                  <div class="form-group mb-3">
                    <label for="fileUpload">Thumbnail</label>
                    <input type="file" class="form-control-file" id="fileUpload" name="fileUpload">
                  </div>
                  <div class="form-group mb-3">
                    <label for="presentationUpload">Presentation</label>
                    <input type="file" class="form-control-file" id="presentationUpload" name="presentationUpload">
                  </div>
                <textarea name="editor" id="editor" class="mb-3"></textarea>
                <button type="submit" class="btn btn-primary mt-3">Create</button>
            </form>
          </div>
      </div>
    </div>

<script>
CKEDITOR.replace('editor');

</script>
<%- layout('layouts/boilerplate')  %>
<style>
    
</style> 
<div class="container-fluid mt-5">
    <div class="row">
        <div class="col-10 offset-1 project">
            <div class="project-content">
                <!-- <div class="project-title p-5" style="background-image: url('<%= project.imageURL.url %>'); background-size: cover; " > -->
                    <div class="project-title py-5" >
                    <p class="display-3"><%= project.title %> <button class="btn btn-primary" data-toggle="modal" data-target="#EditModal">Edit</button></p>
                    <% if (project.presentationURL.url) { %>
                      <p class="display-6">By <%= project.author %></p> <a href="<%= project.presentationURL.url %>" target="_blank" class="btn btn-primary">Download Presentation</a>
                    <% } %>
                </div>
                
                <div class="project-text">
                    <%- project.body %>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- edit modal -->
<div class="modal fade" id="EditModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="deleteModalLabel">To edit you must enter the edit code:</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
            <div class="form-group mb-3">
                <label for="projectEditCode">EditCode</label>
                <input type="text" name="editCode" class="form-control" id="editCodeInput"  placeholder="Please enter EditCode">
              </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
          <button type="button" class="btn btn-primary" id="checkBtn">Edit</button>
        </div>
      </div>
    </div>
  </div>
  

<script>
    $('#checkBtn').click(function(){
        var codeInput = $('#editCodeInput').val()
        var codeTarget = "<%- project.editCode %>";
        if(codeInput === codeTarget) {
            window.location.href = window.location.href + "/edit"
        }else {
            alert('The edit code is wrong, please try another code or contact the admin at nantawat.laothong001@umb.edu')
        }
    })
</script>